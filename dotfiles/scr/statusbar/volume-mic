
case $1 in
  "1") pamixer --default-source -t ; exit ;;
  "icon")
    if [ "$(pamixer --default-source --get-mute)" == "true" ]; then
      printf "\xf2\n"
    else
      printf "\xf1\n"
    fi
    exit
  ;;
esac

vol=$(pamixer --default-source --get-volume)

if [ "$(pamixer --default-source --get-mute)" == "true" ]; then
  printf "\xf2 $vol\n"
  exit
fi
printf "\xf1 %s\n" $vol
